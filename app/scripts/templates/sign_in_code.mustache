<div id="main-content" class="card">
  <header>
    <h1 id="fxa-signin-code-header">{{#t}}Authorize this sign-in{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <div class="graphic graphic-mail">{{#t}}Authorize this sign-in{{/t}}</div>

    <p class="verification-email-message">
    {{#t}}Check your email for the sign-in code sent to %(email)s.{{/t}}
    </p>

    <form novalidate>
      <div class="input-row unblock-code-row">
        <input type="text" class="tooltip-below" id="signin_code" placeholder="{{#t}}Enter sign-in code{{/t}}" required autofocus />
      </div>

      <div class="button-row">
        <button type="submit" class="use-logged-in">{{#t}}Continue{{/t}}</button>
      </div>

    </form>

    <div class="links">
      {{#hasSupportLink}}
        <a id="resend" class="delayed-fadein left" href="#">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
        <a href="{{{ escapedSupportLink }}}" id="support-link" class="delayed-fadein right" target="_blank">{{#t}}Why is this happening?{{/t}}</a>
      {{/hasSupportLink}}
      {{^hasSupportLink}}
        <a id="resend" class="delayed-fadein" href="#">{{#t}}Not in inbox or spam folder? Resend{{/t}}</a>
      {{/hasSupportLink}}
    </div>
  </section>
</div>
